<Window x:Class="CardinalL.Views.CheckRegistrCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardinalL.Views"
        mc:Ignorable="d"
          Title="CheckRegistrCode" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="5" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap">
    Check your mailbox We sent you a code!
            </TextBlock>
            <TextBox x:Name="TextBox_Code" Margin="5" FontSize="20"></TextBox>
            <Button x:Name="ButtonEnter" Margin="5" HorizontalAlignment="Center" FontSize="20" Click="Button_Enter_Click">Enter</Button>
        </StackPanel>
    </Grid>
</Window>
